<%- include('../includes/head') %>
</head>
<body>
    <%- include('../includes/navigation') %>
    <main>
        <% if (orders.length > 0) { %>
         <ul>
                <% orders.forEach(order => { %>
                <li>
                    <h1># <%= order.id %></h1>
                    <ul>
                        <% order.products.forEach(product => { %>
                        <li> <%= product.title %> (<%= product.orderItem.quantity %>) - <a href="/orders/<%= order.id %>">Invoice</a> </li>
                            <% }) %>
                    </ul>
                </li>    
                <% }) %>
         </ul>
        <% } else { %>
                <h1>Nothing here</h1>
            <% } %>
    </main>
</body>
</html>